{
  "name": "mcp-server",
  "version": "2.0.0",
  "description": "MCP Server with MarkItDown integration",
  "main": "server.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node server.js & node mcp-sse-manual.js",
    "start:api": "node server.js",
    "start:mcp": "node mcp-sse-manual.js",
    "start:mcp-simple": "node mcp-simple.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:unit": "jest --testPathPattern=tests/.*\\.test\\.js",
    "test:api": "jest --testPathPattern=tests/api\\.test\\.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.490.0",
    "@modelcontextprotocol/sdk": "^1.19.1",
    "archiver": "^6.0.0",
    "axios": "^1.6.0",
    "body-parser": "^1.20.2",
    "cheerio": "^1.0.0-rc.12",
    "child_process": "^1.0.2",
    "cors": "^2.8.5",
    "docx": "^8.5.0",
    "express": "^4.18.2",
    "googleapis": "^129.0.0",
    "handlebars": "^4.7.8",
    "marked": "^11.0.0",
    "multer": "^1.4.5-lts.1",
    "puppeteer": "^21.0.0",
    "qrcode": "^1.5.3",
    "tesseract.js": "^5.0.0",
    "turndown": "^7.1.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  }
}
