# MCP Server Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
TELEGRAM_PORT=3003
NODE_ENV=production

# =============================================================================
# AI API KEYS (OPTIONAL - features will be disabled without keys)
# =============================================================================

# OpenAI API Key
# Required for: AI Summarization, Content Analysis, Translation
# Get your key at: https://platform.openai.com/api-keys
# Cost: ~$0.002 per 1K tokens (GPT-4o-mini)
OPENAI_API_KEY=

# Google AI (Gemini) API Key
# Alternative to OpenAI for translation, summarization
# Get your key at: https://ai.google.dev/
# Cost: Free tier available, then ~$0.001 per 1K tokens
GOOGLE_API_KEY=

# OpenRouter API Key
# Access to multiple AI models (Claude, Llama, etc.)
# Get your key at: https://openrouter.ai/keys
# Cost: Varies by model, starting from $0.0001 per 1K tokens
OPENROUTER_API_KEY=

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================

# Telegram Bot Token
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram Webhook URL (for production)
# Example: https://your-domain.com/api/telegram/webhook
TELEGRAM_WEBHOOK_URL=

# Enable Telegram bot
TELEGRAM_ENABLED=true

# AI Provider for Telegram (openai, openrouter, google)
TELEGRAM_AI_PROVIDER=openai

# AI Model to use
#
# OpenAI (direct):
#   - o1 (reasoning model, newest)
#   - o1-mini (reasoning model, fast)
#   - gpt-4o-mini (rẻ, nhanh)
#   - gpt-4o (đắt, thông minh)
#   - gpt-4-turbo-preview
#   - gpt-4
#   - gpt-3.5-turbo
#
# OpenRouter - OpenAI:
#   - openai/gpt-4.1 (newest)
#   - openai/gpt-4.1-mini (fast)
#   - openai/o1 (reasoning)
#   - openai/o1-mini (reasoning, fast)
#   - openai/gpt-4o-mini
#   - openai/gpt-4o
#   - openai/gpt-4-turbo
#   - openai/gpt-4
#   - openai/gpt-3.5-turbo
#
# OpenRouter - Google Gemini (many are FREE):
#   - google/gemini-2.5-pro-exp (free, newest)
#   - google/gemini-2.0-flash-exp (free)
#   - google/gemini-pro-1.5 (free)
#   - google/gemini-flash-1.5 (free, fast)
#   - google/gemini-pro (free)
#
# OpenRouter - Claude:
#   - anthropic/claude-3.5-sonnet (smartest)
#   - anthropic/claude-3-opus
#   - anthropic/claude-3-sonnet
#   - anthropic/claude-3-haiku (fast)
#
# OpenRouter - Meta Llama (many are FREE):
#   - meta-llama/llama-3.3-70b-instruct (free)
#   - meta-llama/llama-3.1-405b-instruct
#   - meta-llama/llama-3.1-70b-instruct
#   - meta-llama/llama-3.1-8b-instruct (free)
#
# OpenRouter - Other (many are FREE):
#   - mistralai/mistral-large
#   - mistralai/mixtral-8x7b-instruct (free)
#   - qwen/qwen-2-72b-instruct (free)
#   - deepseek/deepseek-chat (free)
#
# Google AI (direct):
#   - gemini-2.5-pro-exp (newest)
#   - gemini-2.0-flash-exp
#   - gemini-1.5-pro
#   - gemini-1.5-flash (fast)
#   - gemini-pro
#
TELEGRAM_AI_MODEL=gpt-4o-mini

# AI API Key (use one of: OPENAI_API_KEY, OPENROUTER_API_KEY, or GOOGLE_API_KEY above)

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
AI_ENABLED=true
FIRECRAWL_ENABLED=true
CONVERSION_ENABLED=true
TEMPLATES_ENABLED=true
BATCH_ENABLED=true
QRCODE_ENABLED=true

# =============================================================================
# NOTES
# =============================================================================

# FEATURES THAT WORK WITHOUT API KEYS (80% of functionality):
# ✅ MarkItDown file conversion
# ✅ Firecrawl web scraping
# ✅ Document conversion (MD→PDF/DOCX/HTML)
# ✅ Template engine (Invoice, Report, etc.)
# ✅ Batch processing with ZIP
# ✅ QR code generation
# ✅ OCR with Tesseract (local, no API needed)

# FEATURES THAT REQUIRE API KEYS (20% of functionality):
# ❌ AI Summarization (needs OPENAI_API_KEY or GOOGLE_API_KEY)
# ❌ AI Translation (needs any of the AI keys)
# ❌ AI Content Analysis (needs OPENAI_API_KEY)

# HOW TO GET API KEYS:

# 1. OpenAI (Recommended)
#    Sign up: https://platform.openai.com/signup
#    Free: $5 credit for new accounts
