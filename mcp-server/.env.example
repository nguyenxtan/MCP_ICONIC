# MCP Server Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=development

# =============================================================================
# AI FEATURES (OPTIONAL - features will be disabled without keys)
# =============================================================================

# OpenAI API Key
# Required for: AI Summarization, Content Analysis, Translation (OpenAI mode)
# Get your key at: https://platform.openai.com/api-keys
# Cost: ~$0.002 per 1K tokens (GPT-4o-mini)
OPENAI_API_KEY=

# Google Translate API Key (OPTIONAL)
# Required for: Translation (Google mode) - can use OpenAI instead
# Get your key at: https://cloud.google.com/translate/docs/setup
# Cost: $20 per 1M characters
GOOGLE_TRANSLATE_API_KEY=

# =============================================================================
# CLOUD STORAGE (OPTIONAL - for file uploads to cloud)
# =============================================================================

# AWS S3 Configuration
AWS_S3_ENABLED=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Google Drive Configuration
GOOGLE_DRIVE_ENABLED=false
# JSON credentials from Google Cloud Console service account
GOOGLE_DRIVE_CREDENTIALS=
GOOGLE_DRIVE_FOLDER_ID=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
AI_ENABLED=true
FIRECRAWL_ENABLED=true
CONVERSION_ENABLED=true
TEMPLATES_ENABLED=true
BATCH_ENABLED=true
QRCODE_ENABLED=true

# =============================================================================
# NOTES
# =============================================================================

# FEATURES THAT WORK WITHOUT API KEYS:
# ✅ MarkItDown file conversion
# ✅ Firecrawl web scraping
# ✅ Document conversion (MD→PDF/DOCX/HTML)
# ✅ Template engine
# ✅ Batch processing
# ✅ QR code generation
# ✅ OCR with Tesseract (local, no API needed)

# FEATURES THAT REQUIRE API KEYS:
# ❌ AI Summarization (needs OPENAI_API_KEY)
# ❌ AI Translation (needs GOOGLE_TRANSLATE_API_KEY or OPENAI_API_KEY)
# ❌ AI Content Analysis (needs OPENAI_API_KEY)
# ❌ Cloud Storage upload (needs AWS or Google Drive credentials)

