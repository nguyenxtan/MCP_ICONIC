# MCP Server Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=3000
NODE_ENV=production

# =============================================================================
# AI API KEYS (OPTIONAL - features will be disabled without keys)
# =============================================================================

# OpenAI API Key
# Required for: AI Summarization, Content Analysis, Translation
# Get your key at: https://platform.openai.com/api-keys
# Cost: ~$0.002 per 1K tokens (GPT-4o-mini)
OPENAI_API_KEY=

# Google AI (Gemini) API Key
# Alternative to OpenAI for translation, summarization
# Get your key at: https://ai.google.dev/
# Cost: Free tier available, then ~$0.001 per 1K tokens
GOOGLE_API_KEY=

# OpenRouter API Key
# Access to multiple AI models (Claude, Llama, etc.)
# Get your key at: https://openrouter.ai/keys
# Cost: Varies by model, starting from $0.0001 per 1K tokens
OPENROUTER_API_KEY=

# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================

# Telegram Bot Token
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram Webhook URL (for production)
# Example: https://your-domain.com/api/telegram/webhook
TELEGRAM_WEBHOOK_URL=

# Enable Telegram bot
TELEGRAM_ENABLED=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
AI_ENABLED=true
FIRECRAWL_ENABLED=true
CONVERSION_ENABLED=true
TEMPLATES_ENABLED=true
BATCH_ENABLED=true
QRCODE_ENABLED=true

# =============================================================================
# NOTES
# =============================================================================

# FEATURES THAT WORK WITHOUT API KEYS (80% of functionality):
# ✅ MarkItDown file conversion
# ✅ Firecrawl web scraping
# ✅ Document conversion (MD→PDF/DOCX/HTML)
# ✅ Template engine (Invoice, Report, etc.)
# ✅ Batch processing with ZIP
# ✅ QR code generation
# ✅ OCR with Tesseract (local, no API needed)

# FEATURES THAT REQUIRE API KEYS (20% of functionality):
# ❌ AI Summarization (needs OPENAI_API_KEY or GOOGLE_API_KEY)
# ❌ AI Translation (needs any of the AI keys)
# ❌ AI Content Analysis (needs OPENAI_API_KEY)

# HOW TO GET API KEYS:

# 1. OpenAI (Recommended)
#    Sign up: https://platform.openai.com/signup
#    Free: $5 credit for new accounts
#    Pricing: ~$0.002/1K tokens (GPT-4o-mini)

# 2. Google AI (Gemini)
#    Sign up: https://ai.google.dev/
#    Free: Generous free tier
#    Pricing: ~$0.001/1K tokens

# 3. OpenRouter
#    Sign up: https://openrouter.ai/
#    Free: Some models free, pay-as-you-go
#    Access: Claude, Llama, Mistral, and more

# COST ESTIMATION (monthly):
# Light usage (100 requests/day): ~$3-5/month
# Medium usage (1000 requests/day): ~$30-50/month
# Heavy usage (10000 requests/day): ~$300-500/month
